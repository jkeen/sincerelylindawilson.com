---
title: Letters from a naive 40-something midwestern woman.
---

<% paged_original_letters.each do |letter| %>
    <div class="letter <%= letter.data.type %>">
      <%= partial(:letter_content, :locals => {:post => letter}) %>
      <% if related_letters(letter).count > 1 %>
        <div class="view-response">
          <a href="<%= url_for(letter, :fragment => "response") %>">View Conversation</a>
        </div>
      <% end %>
    </div>
<% end %>

<div class="pagination-container text-center">
  <ul class="pagination pagination-lg ">
    <% if current_page_num != 1 %>
      <li><a href="<%= pagination_url(current_page_num - 1) %>">&laquo;</a></li>
    <% end %>
    
    <% (1..(total_pages + 1)).to_a.each do |page_num| %>
        <li class="<%= 'active' if current_page_num == page_num %>"><a href="<%= pagination_url(page_num) %>"><%= page_num %></a></li>
    <% end %>
    <% if current_page_num < total_pages %>
      <li><a href="<%= pagination_url(current_page_num + 1) %>">&raquo;</a></li>
    <% end %>
  </ul>
</div>